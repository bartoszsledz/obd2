<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/main_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewTurnOnOffBluetooth"
            style="@style/button_card_main">

            <Button
                android:id="@+id/btnRealTimeInformation"
                android:text="@string/btnRealTimeInformation"
                style="@style/main_button_style"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewFindDevice"
            style="@style/button_card_main">

            <Button
                android:id="@+id/btnFaultCodes"
                style="@style/main_button_style"
                android:clickable="false"
                android:text="@string/faultCodes"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>